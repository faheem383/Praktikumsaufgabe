@model Praktikumsaufgabe.ViewModels.CommunicationViewModel

<h4>Communication</h4>
<h3 class="errorMsg">@ViewData["Message"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            string action = "Edit";
            if (Model.CommID == 0)
            {
                action = "Create";
            }
        }
        <form asp-controller="Home" asp-action="@action" enctype="/form-data" method="post">
            <input asp-for="CommID" class="form-control" type="hidden" />
            <input asp-for="FileID" class="form-control" type="hidden" />

            <div class="form-group">
                <label asp-for="ComStatus" class="control-label"></label>

                @Html.DropDownListFor(m => m.ComStatus, Model.ComStatusList,new { @class="form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ComType" class="control-label"></label>
                @Html.DropDownListFor(m => m.ComType, Model.ComTypeList,new { @class="form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ComAddress" class="control-label"></label>
                <input asp-for="ComAddress" class="form-control" />
                <span asp-validation-for="ComAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memo" class="control-label"></label>
                @*<input type="text" asp-for="Memo" class="form-control" />*@
                <textarea asp-for="Memo" cols="43" rows="5"></textarea>
                <span asp-validation-for="Memo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=" Save " class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>